      <img src="../images/dangold.png" alt="Rice" style="width: 100%; min-height: 150px;" class="go mt ">
      <div class="carousel-caption">
        <h1 class="text-color">Recipes</h1>
      </div>
    </div>
    <div class="carousel-item">
      <img src="../images/brooke.png" alt="Salad" style="width: 100%; min-height: 150px;" class="go">
      <div class="carousel-caption">
        <h1 class="text-color">Breakfast</h1>
      </div>
    </div>
    <div class="carousel-item">
      <img src="../images/lily.png" alt="beavrages" style="width: 100%; min-height: 150px;" class="go">
      <div class="carousel-caption">
