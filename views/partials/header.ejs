<body>
  <section id="header" class="bg-succes header">
    <div class="container">
      <!-- navigation bar starts here  -->
      <nav class="navbar navbar-expand-md navbar-dark ">
        <!-- Brand -->
        <a class="navbar-brand" href=""><img src="../images/Clear.png" width="100%" height="100%" class="scrollto"
            alt="Recipe" style="width: 80px;" class="mb-5" /><span class="text-color">QuickCook.Com</span></a>
        <!-- Toggler/collapsibe Button -->
      
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
          <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Navbar links -->

        <div class="collapse navbar-collapse" id="collapsibleNavbar">
          <ul class="navbar-nav  ml-auto">
            <li class="nav-item">
              <a class="nav-link text-white my ml-2" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-white ml-2" href="#about">About</a>
            </li>
            <li class="nav-item ">
              <a class="nav-link text-white ml-2" href="#contact">Contact</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-white ml-2" href="https://bit.ly/313kjCh" target="_blank">Add Recipe</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-white ml-2" href="/search" target="_blank">Search</a>
            </li>
            <% if(currentUser){%>
  
            <!-- Dropdown -->
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                <%= currentUser. username %>
              </a>
              <div class="dropdown-menu">
                <a class="dropdown-item" href="/login">Log In</a>
                <a class="dropdown-item" href="/logout">Log Out</a>
                <a class="dropdown-item" href="/password/new">New Password</a>
              </div>
            </li>
          </ul>
        </div>
        <%} %>
      </nav>
    </div>
  </section>
</body>

</html>